# Photo Smart Merge Configuration Template
# Copy this file to .env and adjust the values for your setup

# Timezone
TZ=Europe/Berlin

# Directory Configuration
ROOT_DIR=/data
MASTER_DIR=YourMasterFolder
SOURCE_DIR=YourSourceFolder
OUT_DIR=/out
QUAR_DIR=/quarantine

# Operation Mode
# 1 = dry run (plan only), 0 = execute the plan
DRY_RUN=1

# Duplicate Detection Settings
# Perceptual hash threshold (0-64, lower = stricter matching)
PHASH_THRESHOLD=8

# File Quality Ranking (comma-separated, highest to lowest priority)
QUALITY_ORDER=raw,heic,jpeg,png,other

# Supported File Extensions (comma-separated)
EXTS=jpg,jpeg,png,heic,heif,tif,tiff,cr2,cr3,nef,arw,dng,mp4,mov,m4v

# Docker User (adjust to match your NAS user uid:gid)
DOCKER_USER=1000:1000

# Volume Mappings (adjust paths for your NAS)
PHOTOS_PATH=/path/to/your/photos
REPORTS_PATH=/path/to/your/photos/.reports
QUARANTINE_PATH=/path/to/your/photos/.quarantine

# NAS SSH Connection Settings (for setup scripts)
NAS_HOST=your-nas.local
NAS_USER=your-nas-user
NAS_SSH_KEY=~/.ssh/id_rsa
DOCKER_CONTEXT_NAME=your-nas